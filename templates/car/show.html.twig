{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Car</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                <tr>
                    <th>NbSeats</th>
                    <td>{{ car.nbSeats }}</td>
                </tr>
                <tr>
                    <th>NbDoors</th>
                    <td>{{ car.nbDoors }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ car.name }}</td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>{{ car.cost }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_car_index') }}" class="btn btn-info">Back to list</a>
        <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-warning">Edit</a>

        <div class="mt-4">
            {{ include('car/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
